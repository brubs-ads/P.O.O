package ListaDeExercício2;

import java.util.Scanner;

public class Questao10 {
    public static void main(String[] args) {
        Scanner entrada = new Scanner(System.in);
        int num, ft=1;

        System.out.print("Digite um Número: ");
        num = entrada.nextInt();

        while (num> 0) {
            System.out.print(num);
             if(num >1 ){
                System.out.print(" X ");
             }else{
                System.out.print(" = ");
             }
             ft = ft * num;
             num-=1;
            }
            System.out.print(ft);
    }
}
